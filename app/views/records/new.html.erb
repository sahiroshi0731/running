<div><%= notice %></div>
<h1>登録画面</h1>
<% if @record.errors.present? %>
  <ul>
    入力エラー！！
    <% @record.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>   


<%= form_tag('/records', method: :post) do %>
  <div>
    日付</br>
    <input type="date" name="run_day">
  </div>
  <div>
    タイトル</br>
    <input type="text" name="run_title">
  </div>
  <div>
    距離</br>
    <input type="text" name="run_distance">
  </div>
  <div>
    タイム</br>
    <input type="time" name="run_time" step="1" value="00:00:00">
  </div>
  <div>
    記事</br>
    <textarea name="run_article" rows="10" cols="30"></textarea>
  </div>
  <div>
    <input type="submit" value="送信する"></p>
  </div>
<% end %>
<%= link_to '戻る', "/records", method: :get %>
