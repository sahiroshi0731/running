<h1>ユーザー登録</h1>

<%= form_with model: [:admin, @user], local: true do |f| %>
  <%= f.label :name, '名前' %>
  <%= f.text_field :name %>
  <%= f.fields_for :member do |s| %>
    <%= s.label :enrollment, '年月日' %>
    <%= s.text_field :enrollment %>
    <%= s.hidden_field :fullhour, :value => "0" %>
    <%= s.hidden_field :fullmin, :value => "0" %>
    <%= s.hidden_field :fullsec, :value => "0" %>
    <%= s.hidden_field :halfhour, :value => "0" %>
    <%= s.hidden_field :halfmin, :value => "0" %>
    <%= s.hidden_field :halfsec, :value => "0" %>
  <% end %>
  <%= f.label :email, 'メールアドレス' %>
  <%= f.text_field :email %>
  <%= f.label :password, 'パスワード' %>
  <%= f.password_field :password %>
  <%= f.label :password_confimation, 'パスワード（確認）' %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "送信する",class: "btn-so-pop, lo" %>
<% end %>
